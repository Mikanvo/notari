{% block page_content %}
    {% form_theme form 'widget/fields-block.html.twig' %}
    <div class="modal-header bg-secondary-gradient">
        <h2 class="modal-title" style="margin-top: -15px;color: white">DETAILS-{{ titre | upper  }}
        </h2>
        <button class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
    </div>
    {{ form_start(form, {'attr': {'role':'form', 'class': 'form'}}) }}
    <div class="modal-body ">

        <div class="contenu" style="margin-top: -10px">
            <div class="row">
                <div class="form-group col-md-6 ">
                    <label class="sr-onl" for="userinput1">Titre</label>
                    {{ form_widget(form.title,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Titre','required':'required' }}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>
                <div class="form-group col-md-6">
                    <label class="sr-onl" for="userinput1">Client</label>
                    {{ form_widget(form.client,{'attr':{'class':'form-select form-control border-primary','id':'userinput1','placeholder':'Client' }}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>

            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label class="sr-onl" for="userinput1">Description</label>
                    {{ form_widget(form.description,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Description' }}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>

            </div>
            <div class="row">
                <div class="form-group col-md-6 ">
                    <label class="sr-onl" for="userinput1">Debut</label>
                    {{ form_widget(form.start,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Debut'}}) }}

                </div>
                <div class="form-group col-md-6 ">
                    <label class="sr-onl" for="userinput1">Fin</label>
                    {{ form_widget(form.end,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Fin','required':'required'}}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>
            </div>


        </div>
    </div>
    <div class="modal-footer">
        <a href="{{ path('calendar') }}" class="btn btn-secondary">Fermer</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
