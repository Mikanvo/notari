{% extends '_admin/_includes/index.html.twig' %}

{% block titre %}{{ menu.getRoute }}{% endblock %}
   {% block style %}
       <style>
           .action {
             width: 100px !important;
           }
       </style>
   {% endblock %}
{% block page_content %}

    {% set new = menu.getRoute %}
    <!-- PAGE-HEADER -->
    <div class="page-header">
        <h1 class="page-title">{{ "Acte" |capitalize }}</h1>
        <div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('acte') }}">LISTE DES TYPES SOCIETE </a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ "LISTE TYPES SOCIETE" | capitalize }}</li>
            </ol>
        </div>

    </div>
    <!-- PAGE-HEADER END -->
    <!-- Row -->
    <div class="row row-sm">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-10">

                </div>
                <div class="col-md-2">
                    <a class="btn btn-secondary bg-secondary-gradient mt-3 offset-7" {% if new !="admin" %} href="{{ path(new ~ '_new') }}" {% endif%} {% if modal=="modal" %} data-bs-toggle="modal" data-bs-target="#extralargemodal" {% endif %}>
                        <i class="fe fe-plus"></i>Nouveau
                    </a>
                    {#<button class="btn btn-secondary bg-secondary-gradient mt-3" href="{{ path( new ~'_new') }}" data-bs-toggle="modal" data-bs-target="#editUserModal">Extralarge Modal</button>#}
                </div>
            </div><br>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ titre | capitalize }}</h3>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example2" class="table table-bordered text-nowrap border-bottom">
                            <thead>

                            {% include '_admin/_tableau/header.html.twig' with {'tableau':tableau  }%}

                            </thead>
                            <tbody>
                            {% for data in pagination %}
                                <tr>

                                    <td >
                                        {{ data.libelle }}
                                    </td>
                                    <td >
                                        {{ data.sigle  }}
                                    </td>

                                    {% include '_admin/_tableau/action.html.twig' with {'module':new ,'data':data }%}

                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
<script src="{{ asset('admin/admin/js/jquery3.1.js') }}"></script>

<script>
    $(".action").css("width", "100px");
</script>

{% endblock %}